<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framecontainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <AbsoluteLayout
        android:id="@+id/AbsoluteLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </AbsoluteLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/video_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            style="?android:progressBarStyleLarge"
            android:visibility="gone"/>
        
        <RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/resolution_1080"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#AA000000"
                android:text="1080p"
                android:textColor="#fff"
                android:textSize="14sp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/resolution_720"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#AA000000"
                android:text="720p"
                android:textColor="#fff"
                android:textSize="14sp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/resolution_640"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#AA000000"
                android:text="640p"
                android:textColor="#fff"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical">

            <!--<Button-->
                <!--android:id="@+id/stopbutton"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignTop="@+id/playbutton"-->
                <!--android:background="#AA000000"-->
                <!--android:text="stop"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="14sp"-->
                <!--android:width="80dp"-->
                <!--android:visibility="gone"/>-->

            <!--<Button-->
                <!--android:id="@+id/touchbutton"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignTop="@+id/scrubber"-->
                <!--android:layout_marginLeft="1dp"-->
                <!--android:background="#AA000000"-->
                <!--android:text="motion"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="14sp"-->
                <!--android:width="80dp"-->
                <!--android:visibility="gone" />-->



            <Button
                android:id="@+id/resolution"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="#AA000000"
                android:text="RESOLU"
                android:textColor="#fff"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/playbutton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#AA000000"
                android:text="play"
                android:textColor="#fff"
                android:textSize="14sp"/>

            <SeekBar
                android:id="@+id/scrubber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AA000000"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:id="@+id/music"
                android:background="#AA000000"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/music_off"/>

            <Button
                android:id="@+id/more"
                android:background="#AA000000"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/more"/>

            <Button
                android:id="@+id/info"
                android:background="#AA000000"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/info"/>

        </LinearLayout>

    </RelativeLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/header_back_color"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
</FrameLayout>