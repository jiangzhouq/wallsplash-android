<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/back_white">
        <RelativeLayout
            android:id="@+id/image_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/item_image_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:transitionName="imageCover"
                android:scaleType="fitXY"
                android:background="@color/back_white"/>
            <ImageView
                android:id="@+id/play"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/play"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/item_image_text_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/card_background"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:elevation="10dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/item_image_author"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_black_pic_name"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:text="test"
                    />

                <TextView
                    android:id="@+id/item_image_date"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/text_black_pic_tag"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="15sp"
                    android:text="test"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>