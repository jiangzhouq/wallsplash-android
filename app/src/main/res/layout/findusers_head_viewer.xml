<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/theme_window_background"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/find_users"
        android:textColor="@color/text_without_palette"/>
    <RelativeLayout
        android:layout_width="96dp"
        android:layout_height="54dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_profile_1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_launcher"
            app:civ_border_width="2dp"
            android:layout_centerVertical="true"
            app:civ_border_color="@color/theme_window_background"/>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_profile_2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_launcher"
            app:civ_border_width="2dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            app:civ_border_color="@color/theme_window_background"/>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_profile_3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_launcher"
            app:civ_border_width="2dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            app:civ_border_color="@color/theme_window_background"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="18dp"
        android:layout_height="36dp"
        android:src="@drawable/arrow"/>
</LinearLayout>