<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/user_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/image_without_palette">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:elevation="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/user_profile"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_width="36dp"
                android:layout_height="36dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_user_author"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_without_palette"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:text="test"
                    />

                <TextView
                    android:id="@+id/item_user_detail"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/text_without_palette"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="11sp"
                    android:text="test"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/image_without_palette">
            <ImageView
                android:id="@+id/item_image_img1"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:transitionName="imageCover"
                android:scaleType="fitXY"
                android:padding="2dp"/>
            <ImageView
                android:id="@+id/item_image_img2"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:transitionName="imageCover"
                android:scaleType="fitXY"
                android:padding="2dp"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>